{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"],
      "@types/*": ["shared/types/*"],
      "@utils/*": ["shared/utils/*"]
    },
    "sourceMap": true,
    "isolatedModules": true,
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "dist"]
}
